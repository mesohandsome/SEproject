<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="627dp"
            android:padding="5dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:background="@color/background"
                            android:orientation="vertical"
                            android:paddingTop="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/iv_image"
                                            android:layout_width="120dp"
                                            android:layout_height="120dp"
                                            android:layout_marginLeft="8dp"
                                            android:scaleType="centerCrop"
                                            android:src="@mipmap/ic_launcher" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical"
                                            android:paddingLeft="20dp">

                                                <FrameLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">

                                                        <TextView
                                                            android:id="@+id/tv_title_name"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:ellipsize="end"
                                                            android:gravity="start|center_vertical"
                                                            android:singleLine="true"
                                                            android:text="@string/title_name"
                                                            android:textColor="@color/colorPrimaryDark"
                                                            android:textSize="16dp" />

                                                        <TextView
                                                            android:id="@+id/personal_tv_name"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginLeft="48dp"
                                                            android:singleLine="true"
                                                            android:textColor="@color/colorAccent"
                                                            android:textSize="16dp" />

                                                </FrameLayout>

                                                <FrameLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="5dp">

                                                        <TextView
                                                            android:id="@+id/tv_title_real_name"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:ellipsize="end"
                                                            android:gravity="start|center_vertical"
                                                            android:singleLine="true"
                                                            android:text="@string/title_real_name"
                                                            android:textColor="@color/colorPrimaryDark"
                                                            android:textSize="16dp" />

                                                        <TextView
                                                            android:id="@+id/personal_tv_real_name"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginLeft="48dp"
                                                            android:singleLine="true"
                                                            android:textColor="@color/colorAccent"
                                                            android:textSize="16dp" />

                                                </FrameLayout>

                                                <FrameLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:paddingTop="5dp">

                                                        <TextView
                                                            android:id="@+id/tv_title_email"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:ellipsize="end"
                                                            android:gravity="start|center_vertical"
                                                            android:singleLine="true"
                                                            android:text="@string/title_email"
                                                            android:textColor="@color/colorPrimaryDark"
                                                            android:textSize="16dp" />

                                                        <TextView
                                                            android:id="@+id/personal_tv_email"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginLeft="48dp"
                                                            android:singleLine="true"
                                                            android:textColor="@color/colorAccent"
                                                            android:textSize="16dp" />

                                                </FrameLayout>

                                        </LinearLayout>

                                </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">


                                <Button
                                    android:id="@+id/btn_setting"
                                    android:layout_width="81dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/white"
                                    android:drawableTop="@drawable/ic_menu_settings"
                                    android:text="@string/menu_setting"
                                    android:textColor="@color/title"
                                    android:textSize="11sp" />

                                <Button
                                    android:id="@+id/btn_baby"
                                    android:layout_width="81dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/white"
                                    android:drawableTop="@drawable/ic_menu_baby"
                                    android:text="@string/menu_baby"
                                    android:textColor="@color/title"
                                    android:textSize="10sp" />

                                <Button
                                    android:id="@+id/btn_babysitter"
                                    android:layout_width="81dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/white"
                                    android:drawableTop="@drawable/ic_menu_babysitter"
                                    android:text="@string/menu_babysitter"
                                    android:textColor="@color/title"
                                    android:textSize="10sp" />

                                <Button
                                    android:id="@+id/btn_notice"
                                    android:layout_width="81dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/white"
                                    android:drawableTop="@drawable/ic_menu_notifications"
                                    android:text="@string/menu_notice"
                                    android:textColor="@color/title"
                                    android:textSize="11sp" />

                                <Button
                                    android:id="@+id/btn_store"
                                    android:layout_width="81dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/white"
                                    android:drawableTop="@drawable/ic_menu_heart"
                                    android:text="@string/menu_store"
                                    android:textColor="@color/highlight"
                                    android:textSize="11sp" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="24dp"
                            android:gravity="left"
                            android:text="@string/title_comment"
                            android:textColor="@color/title"
                            android:textSize="24sp" />

                        <EditText
                            android:id="@+id/edt_order_note_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/edittext_back"
                            android:gravity="top"
                            android:hint="留下評論讓大家參考吧！"
                            android:minLines="5"
                            android:padding="5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewPersonal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            tools:listitem="@layout/adapter_comment" />

                </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/personal_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_menu_search" />

                <ImageButton
                    android:id="@+id/personal_personal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_menu_person" />

                <ImageButton
                    android:id="@+id/personal_needs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_menu_need" />
        </LinearLayout>


</LinearLayout>